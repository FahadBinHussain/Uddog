# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/uddog_fundraising"

# NextAuth.js Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-nextauth-secret-key-here"

# OAuth Providers (Optional)
GOOGLE_CLIENT_ID="your-google-oauth-client-id"
GOOGLE_CLIENT_SECRET="your-google-oauth-client-secret"
GITHUB_CLIENT_ID="your-github-oauth-client-id"
GITHUB_CLIENT_SECRET="your-github-oauth-client-secret"

# Stripe Payment Configuration
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-stripe-webhook-secret"

# Supabase Configuration (for real-time features)
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_KEY="your-supabase-service-role-key"

# Email Configuration (for notifications)
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-email-password"
EMAIL_FROM="noreply@uddog.com"

# File Upload Configuration
UPLOAD_PROVIDER="cloudinary" # Options: cloudinary, aws-s3, local
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# AWS S3 Configuration (if using AWS)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="uddog-uploads"

# Redis Configuration (for caching and sessions)
REDIS_URL="redis://localhost:6379"

# Application Configuration
NEXT_PUBLIC_APP_NAME="UdDog Fundraising Platform"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_SUPPORT_EMAIL="support@uddog.com"

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=24 # hours
MAX_LOGIN_ATTEMPTS=5

# Rate Limiting
RATE_LIMIT_WINDOW=15 # minutes
RATE_LIMIT_MAX_REQUESTS=100

# Analytics Configuration (Optional)
GOOGLE_ANALYTICS_ID="GA-XXXXXXXXXX"
HOTJAR_ID="your-hotjar-id"

# Monitoring and Logging
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
LOG_LEVEL="info" # debug, info, warn, error

# Social Media Integration (Optional)
FACEBOOK_APP_ID="your-facebook-app-id"
TWITTER_API_KEY="your-twitter-api-key"
LINKEDIN_CLIENT_ID="your-linkedin-client-id"

# Notification Services
PUSHER_APP_ID="your-pusher-app-id"
PUSHER_KEY="your-pusher-key"
PUSHER_SECRET="your-pusher-secret"
PUSHER_CLUSTER="mt1"

# Development/Production Environment
NODE_ENV="development" # development, production, test
DEBUG_MODE="true"

# API Keys for External Services
RECAPTCHA_SITE_KEY="your-recaptcha-site-key"
RECAPTCHA_SECRET_KEY="your-recaptcha-secret-key"
MAPBOX_ACCESS_TOKEN="your-mapbox-token"

# Webhook URLs
STRIPE_WEBHOOK_URL="http://localhost:3000/api/webhooks/stripe"
INTERNAL_WEBHOOK_SECRET="your-internal-webhook-secret"

# Feature Flags
ENABLE_SOCIAL_LOGIN="true"
ENABLE_RECURRING_DONATIONS="true"
ENABLE_CAMPAIGN_VERIFICATION="true"
ENABLE_REAL_TIME_UPDATES="true"
ENABLE_EMAIL_NOTIFICATIONS="true"
ENABLE_SMS_NOTIFICATIONS="false"

# Admin Configuration
ADMIN_EMAIL="admin@uddog.com"
DEFAULT_ADMIN_PASSWORD="change-this-password"

# Platform Limits
MAX_CAMPAIGN_GOAL="1000000" # $1M
MAX_IMAGE_SIZE="5242880" # 5MB in bytes
MAX_IMAGES_PER_CAMPAIGN="5"
MAX_COMMENT_LENGTH="2000"
MAX_DESCRIPTION_LENGTH="5000"

# Currency and Localization
DEFAULT_CURRENCY="USD"
SUPPORTED_CURRENCIES="USD,EUR,GBP,CAD,AUD"
DEFAULT_LOCALE="en-US"
SUPPORTED_LOCALES="en-US,es-ES,fr-FR,de-DE"

# Backup Configuration
BACKUP_SCHEDULE="0 2 * * *" # Daily at 2 AM
BACKUP_RETENTION_DAYS="30"
S3_BACKUP_BUCKET="uddog-backups"

# Legal and Compliance
PRIVACY_POLICY_URL="https://uddog.com/privacy"
TERMS_OF_SERVICE_URL="https://uddog.com/terms"
COOKIE_POLICY_URL="https://uddog.com/cookies"
